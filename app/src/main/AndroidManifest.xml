<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.metamart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VoteNow"
        tools:targetApi="31">
        <activity
            android:name="com.example.metamart.activities.ProfileActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.metamart.activities.SearchActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.metamart.activities.ProductDetailsActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.metamart.activities.PaymentActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.metamart.activities.CheckoutActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.metamart.activities.CategoryActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.metamart.activities.CartActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.metamart.activities.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.example.metamart.activities.BottomNavigation"
            android:exported="false" />
        <activity
            android:name="com.example.metamart.activities.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.example.metamart.activities.SignInActivity"
            android:exported="false" />
        <activity
            android:name="com.example.metamart.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>